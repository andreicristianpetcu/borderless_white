{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Dark Duck Duck Go!",
  "author": "Andrei Cristian Petcu",
  "description": "Unified simple dark theme that works well with Duck Duck Go",
  "homepage_url": "https://github.com/andreicristianpetcu/firefox_themes",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "theme": {
    "colors": {
      "bookmark_text": "rgba(255, 255, 255, 0.6)",
      "button_background_active": "#333333",
      "button_background_hover": "#333333",
      "frame_inactive": "#161616",
      "frame": "#161616",
      "icons_attention": "rgba(255, 255, 255, 0.6)",
      "icons": "rgba(255, 255, 255, 0.6)",
      "ntp_background": "#161616",
      "ntp_text": "rgba(255, 255, 255, 0.6)",
      "popup_border": "#161616",
      "popup_highlight_text": "#00b3f4",
      "popup_highlight": "#333333",
      "popup_text": "rgba(255, 255, 255, 0.6)",
      "popup": "#161616",
      "sidebar_border": "#161616",
      "sidebar_highlight_text": "rgba(255, 255, 255, 0.6)",
      "sidebar_highlight": "#333333",
      "sidebar_text": "rgba(255, 255, 255, 0.6)",
      "sidebar": "#161616",
      "tab_background_separator": "#161616",
      "tab_background_text": "#a9a9ab",
      "tab_line": "rgba(255, 255, 255, 0.6)",
      "tab_loading": "rgba(255, 255, 255, 0.6)",
      "tab_selected": "#161616",
      "tab_text": "rgba(255, 255, 255, 0.6)",
      "toolbar_bottom_separator": "#161616",
      "toolbar_field_border_focus": "#161616",
      "toolbar_field_border": "#161616",
      "toolbar_field_focus": "#333333",
      "toolbar_field_highlight_text": "#3584e4",
      "toolbar_field_highlight": "white",
      "toolbar_field_text": "white",
      "toolbar_field_text_focus": "#cccccc",
      "toolbar_field_separator": "#333333",
      "toolbar_field": "#161616",
      "toolbar_top_separator": "#333333",
      "toolbar_vertical_separator": "#161616",
      "toolbar": "#161616"
    }
  }
}
