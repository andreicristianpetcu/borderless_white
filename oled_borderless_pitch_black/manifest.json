{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Oled Borderless Pitch Black",
  "author": "Andrei Cristian Petcu",
  "description": "Black all around without any borders. Good for battery life for OLED screens since black does not use energy.",
  "homepage_url": "https://github.com/andreicristianpetcu/firefox_themes",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "theme": {
    "colors": {
      "bookmark_text": "rgba(255, 255, 255, 0.6)",
      "button_background_active": "#38383d",
      "button_background_hover": "#38383d",
      "frame_inactive": "#000000",
      "frame": "#000000",
      "icons_attention": "rgba(255, 255, 255, 0.6",
      "icons": "rgba(255, 255, 255, 0.6)",
      "ntp_background": "#000000",
      "ntp_text": "rgba(255, 255, 255, 0.6)",
      "popup_border": "#000000",
      "popup_highlight_text": "#00b3f4",
      "popup_highlight": "#38383d",
      "popup_text": "rgba(255, 255, 255, 0.6)",
      "popup": "#000000",
      "sidebar_border": "#000000",
      "sidebar_highlight_text": "rgba(255, 255, 255, 0.6)",
      "sidebar_highlight": "#38383d",
      "sidebar_text": "rgba(255, 255, 255, 0.6)",
      "sidebar": "#000000",
      "tab_background_separator": "#000000",
      "tab_background_text": "#a9a9ab",
      "tab_line": "rgba(255, 255, 255, 0.6)",
      "tab_loading": "rgba(255, 255, 255, 0.6)",
      "tab_selected": "#000000",
      "tab_text": "rgba(255, 255, 255, 0.6)",
      "toolbar_bottom_separator": "#000000",
      "toolbar_field_border_focus": "#000000",
      "toolbar_field_border": "#000000",
      "toolbar_field_focus": "#38383d",
      "toolbar_field_highlight_text": "#00b3f4",
      "toolbar_field_highlight": "#38383d",
      "toolbar_field_separator": "#000000",
      "toolbar_field_text_focus": "white",
      "toolbar_field_text": "white",
      "toolbar_field": "#000000",
      "toolbar_top_separator": "#38383d",
      "toolbar_vertical_separator": "#000000",
      "toolbar": "#000000"
    }
  }
}
