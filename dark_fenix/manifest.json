{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Dark Fenix",
  "author": "Andrei Cristian Petcu",
  "description": "This is a dark theme inspired by the new Firefox for Android release (Fenix)",
  "homepage_url": "https://github.com/andreicristianpetcu/firefox_themes",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "theme": {
    "colors": {
      "bookmark_text": "rgb(251, 251, 254)", 
      "button_background_active": "rgb(53, 53, 62)",
      "button_background_hover": "rgb(53, 53, 62)",
      "frame_inactive": "#212127",
      "frame": "#212127",
      "icons_attention": "rgb(251, 251, 254)",
      "icons": "rgb(251, 251, 254)",
      "ntp_background": "#212127",
      "ntp_text": "rgb(251, 251, 254)",
      "popup_border": "#212127",
      "popup_highlight_text": "#00b3f4",
      "popup_highlight": "rgba(255, 255, 255, 0.1)",
      "popup_text": "rgb(251, 251, 254)",
      "popup": "#212127",
      "sidebar_border": "#212127",
